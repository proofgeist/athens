{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"],
			"env": [
				"FM_SERVER",
				"FM_DATABASE",
				"FM_USERNAME",
				"FM_PASSWORD",
				"OTTO_API_KEY",
				"BETTER_AUTH_SECRET"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false,
			"dependsOn": ["^build"]
		}
	}
}
